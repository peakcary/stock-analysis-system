# 部署配置环境变量示例
# 复制为 .env.deploy 并设置实际值

# 服务器连接配置
DEPLOY_SERVER_IP=your-server-ip-here
DEPLOY_SERVER_USER=root
DEPLOY_SERVER_PASS=your-secure-server-password

# 数据库配置
DB_ROOT_PASSWORD=your-secure-database-root-password
DB_APP_PASSWORD=your-secure-app-database-password
DB_NAME=stock_analysis

# 应用配置
JWT_SECRET_KEY=your-32-character-secret-key-here
ADMIN_USERNAME=admin
ADMIN_PASSWORD=your-secure-admin-password

# API配置
API_HOST=0.0.0.0
API_PORT=3007

# 前端配置
CLIENT_PORT=8005
FRONTEND_PORT=8006

# 微信支付配置（可选）
WECHAT_APPID=your-wechat-appid
WECHAT_MCH_ID=your-wechat-mch-id
WECHAT_API_KEY=your-wechat-api-key

# SSL配置（可选）
SSL_ENABLED=false
SSL_CERT_PATH=/path/to/cert.pem
SSL_KEY_PATH=/path/to/key.pem