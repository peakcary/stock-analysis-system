# 应用基本配置
APP_NAME=股票概念分析系统
APP_VERSION=1.0.0
DEBUG=true

# 服务器配置
HOST=0.0.0.0
PORT=8000

# 数据库配置
DATABASE_URL=mysql+pymysql://root:Pp123456@localhost:3306/stock_analysis_dev
DATABASE_HOST=localhost
DATABASE_PORT=3306
DATABASE_USER=root
DATABASE_PASSWORD=Pp123456
DATABASE_NAME=stock_analysis_dev

# JWT 配置
SECRET_KEY=your-super-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS 配置（多个地址用逗号分隔）
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://localhost:3001

# 分页配置
DEFAULT_PAGE_SIZE=10
MAX_PAGE_SIZE=100

# 文件上传配置
MAX_FILE_SIZE=104857600
UPLOAD_DIR=uploads

# 日志配置
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# 微信支付配置
WECHAT_APPID=your_wechat_appid
WECHAT_MCH_ID=your_merchant_id
WECHAT_API_KEY=your_32_char_api_key
WECHAT_CERT_PATH=certs/apiclient_cert.pem
WECHAT_KEY_PATH=certs/apiclient_key.pem

# 应用基础URL（用于支付回调，生产环境需要是HTTPS）
BASE_URL=https://your-domain.com

# 支付配置
PAYMENT_ORDER_TIMEOUT_HOURS=2
PAYMENT_ENABLED=true

# 数据库性能优化配置 v2.6.4 - 新增
# Database Performance Optimization Configuration

# 是否启用优化表结构 (true/false)
USE_OPTIMIZED_TABLES=false

# 是否启用查询性能日志记录 (true/false)
ENABLE_PERFORMANCE_LOG=true

# 是否启用查询缓存 (true/false) 
ENABLE_QUERY_CACHE=true

# API性能监控
API_PERFORMANCE_MONITORING=true

# 后台数据汇总任务配置
ENABLE_BACKGROUND_AGGREGATION=true
AGGREGATION_INTERVAL_MINUTES=30

# 缓存配置
REDIS_URL=redis://localhost:6379/0
CACHE_EXPIRE_SECONDS=3600

# 导入文件路径配置
TXT_IMPORT_PATH=/path/to/txt/files
BACKUP_PATH=/path/to/backup

# 系统资源配置
MAX_CONCURRENT_IMPORTS=3
MAX_MEMORY_USAGE_MB=2048
QUERY_TIMEOUT_SECONDS=30