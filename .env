# Docker 容器环境配置
# Docker Container Environment Configuration

# 数据库配置
DATABASE_URL=mysql+pymysql://root:root123@mysql:3306/stock_analysis
MYSQL_ROOT_PASSWORD=root123
MYSQL_DATABASE=stock_analysis
MYSQL_USER=stockuser
MYSQL_PASSWORD=stockpass

# JWT 配置
SECRET_KEY=your_local_secret_key_here_at_least_32_characters_long
ACCESS_TOKEN_EXPIRE_MINUTES=60
ALGORITHM=HS256

# 应用配置
ENVIRONMENT=development
LOG_LEVEL=INFO
DEBUG=true

# API 配置
API_V1_STR=/api/v1
PROJECT_NAME="Stock Analysis System - Local Dev"

# 前端配置
REACT_APP_API_URL=http://localhost:8000/api/v1
REACT_APP_ENVIRONMENT=development
VITE_API_URL=http://localhost:8000

# 服务器配置
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000
FRONTEND_PORT=3000
CLIENT_PORT=8006

# 客户端配置 (用户端)
VITE_CLIENT_API_URL=http://localhost:8000

# Nginx 配置
NGINX_HTTP_PORT=80
NGINX_HTTPS_PORT=443

# 微信支付配置 (根据需要配置)
WECHAT_APPID=your_wechat_appid
WECHAT_MCHID=your_wechat_mchid
WECHAT_KEY=your_wechat_key
WECHAT_NOTIFY_URL=http://your-domain.com/api/v1/payment/notify