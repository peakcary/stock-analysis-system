# 生产环境配置示例
# 复制此文件为 .env.prod 并修改相应配置

# 数据库配置
MYSQL_ROOT_PASSWORD=your_strong_root_password_here
MYSQL_DATABASE=stock_analysis_prod
MYSQL_USER=stock_user
MYSQL_PASSWORD=your_strong_password_here

# Redis 配置
REDIS_PASSWORD=your_redis_password_here

# JWT 配置
SECRET_KEY=your_super_secret_key_here_at_least_32_characters_long
ACCESS_TOKEN_EXPIRE_MINUTES=60

# 应用配置
ENVIRONMENT=production
LOG_LEVEL=INFO
DEBUG=false

# API 配置
API_V1_STR=/api/v1
PROJECT_NAME=Stock Analysis System

# 前端配置
REACT_APP_API_URL=https://yourdomain.com/api/v1
REACT_APP_ENVIRONMENT=production

# 邮件配置 (可选)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_email_password
SMTP_FROM_EMAIL=noreply@yourdomain.com

# SSL 证书路径 (如果使用HTTPS)
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# 监控配置 (可选)
SENTRY_DSN=your_sentry_dsn_here

# 备份配置 (可选)
BACKUP_S3_BUCKET=your-backup-bucket
BACKUP_S3_ACCESS_KEY=your_s3_access_key
BACKUP_S3_SECRET_KEY=your_s3_secret_key