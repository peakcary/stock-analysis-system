# Docker 开发环境配置
# Docker Development Environment Configuration

# 数据库配置
DATABASE_URL=mysql+pymysql://dev_user:dev_password@mysql:3306/stock_analysis_dev
MYSQL_ROOT_PASSWORD=dev_root_password
MYSQL_DATABASE=stock_analysis_dev
MYSQL_USER=dev_user
MYSQL_PASSWORD=dev_password

# Redis 配置
REDIS_URL=redis://redis:6379
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0

# JWT 配置
SECRET_KEY=dev_secret_key_change_in_production_at_least_32_characters
ACCESS_TOKEN_EXPIRE_MINUTES=60
ALGORITHM=HS256

# 应用配置
ENVIRONMENT=development
DEBUG=True
LOG_LEVEL=INFO

# API 配置
API_V1_STR=/api/v1
PROJECT_NAME="Stock Analysis System - Docker Dev"

# 服务器配置
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000
FRONTEND_PORT=3000
CLIENT_PORT=8006

# 数据库连接池配置
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20
DATABASE_POOL_TIMEOUT=30
DATABASE_POOL_RECYCLE=3600

# 微信支付配置 (开发环境模拟)
WECHAT_APPID=dev_wechat_appid
WECHAT_MCH_ID=dev_wechat_mch_id
WECHAT_API_KEY=dev_wechat_api_key
WECHAT_CERT_PATH=/app/certs/dev_wechat_cert.pem
WECHAT_KEY_PATH=/app/certs/dev_wechat_key.pem

# 应用基础URL
BASE_URL=http://localhost:8000

# 文件上传配置
MAX_FILE_SIZE=104857600  # 100MB
UPLOAD_DIR=uploads

# 支付配置
PAYMENT_ORDER_TIMEOUT_HOURS=2
PAYMENT_ENABLED=True
PAYMENT_MOCK_MODE=True

# CORS 配置
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8006", "http://127.0.0.1:3000", "http://127.0.0.1:8006"]

# 安全配置
ALLOWED_HOSTS=["localhost", "127.0.0.1", "backend", "frontend", "client"]

# 日志配置
LOG_FILE=/app/logs/app.log
LOG_FORMAT=json
LOG_ROTATION=True
LOG_MAX_SIZE=100MB
LOG_BACKUP_COUNT=10